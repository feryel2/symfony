{% extends '/backoffice/baseback.html.twig' %}

{% block title %}Credit index{% endblock %}

{% block content %}
<main>
    <section class="section-md bg-default decor-text" data-content="Review">
        <div class="container">
                <h2 class="heading-decorated">Remboursement Details</h2>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ remboursement.id }}</td>
                    </tr>
                    <tr>
                        <th>Montant</th>
