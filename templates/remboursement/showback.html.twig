                    </tr>
                    </tbody>
                </table>

                <a style="max-width: 300px;" class="btn btn-block btn-outline-info" href="{{ path('app_remboursement_listback', {'idcredit': remboursement.credit.id}) }}">Back to list</a>

                {# <a href="{{ path('app_remboursement_edit', {'id': remboursement.id}) }}">edit</a> #}

                {{ include('remboursement/_delete_form.html.twig') }}
            </div>
</section>
</main>
